{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row justify-content-around">
            <div class="col-4 text-center">
                <div class="card border-primary mb-3" >
                    <div class="card-header">Total cumulé des stocks disponibles</div>
                    <div class="card-body my-4">
                        {% for stock in stock %}
                            <h1 class="card-title">{{ stock }}</h1>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-4 text-center">
                <div class="card border-primary mb-3">
                    <div class="card-header">3 derniers produits en rupture de stock</div>
                    <div class="card-body">
                        <ul>
                        {% for soldOut in soldOut %}
                            <li class="card-title"><a href="{{ path('phone_view', {id: soldOut.id}) }}">{{ soldOut.brand }} - {{ soldOut.model }}</a></li>
                        {% endfor %}
                            </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-around mt-5">
        <div class="col-4 homeButton">
            <a class="btn btn-lg btn-primary" role="button" href="{{path('phone_index')}}">Liste des modèles</a>
        </div>
        <div class="col-4 homeButton">
            <a class="btn btn-lg btn-primary" role="button" href="{{path('phone_create')}}">Créer un modèle</a>
        </div>
    </div>
    </div>
{% endblock %}
